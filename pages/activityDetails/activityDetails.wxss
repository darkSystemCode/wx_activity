/* pages/activityDetails/activityDetails.wxss */
page {
  margin-bottom: 56px;
}

.title {
  font-weight: 800;
}

.content, .subInfo {
  font-size: 16px;

}
.subInfo .time, .subInfo .address {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.subInfo .time view, .subInfo .address view {
  margin-left: 3px;
}

.userInfo {
  display: flex;
  align-items: center;
}

.userInfo .avatar {
  width: 60px;
  height: 60px;
  border-radius: 8px;
  margin-right: 6px;
}

.userInfo .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.userInfo .name view:last-child {
  color: #cccccc;
  font-size: 14px;
}

.btn {
  position: fixed;
  bottom: 10px;
  left: 0;
  right: 0;
  width: 90%;
  border-radius: 20px;
  margin: 0 auto;
}

.btn button {
  border-radius: 20px;
  background-color: #94C6F2;
  color: #000000;
}

